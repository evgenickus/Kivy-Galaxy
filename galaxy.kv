            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            text: "SCORE"
            font_name: "Fonts/Eurostile.ttf"
            font_size: dp(25)
            size_hint: .4, 1

        Label:
            # canvas.before:
            #     Color:
            #         rgba: 0, 0, 1, .5
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            text: root.count_score
            font_name: "Fonts/Eurostile.ttf"
            font_size: dp(25)
            size_hint: .6, 1
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            


