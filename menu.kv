#:kivy 2.2.0

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        text: root.parent.menu_title_text
        font_name: "Fonts/Sackers-Gothic-Std-Light.ttf"
        font_size: dp(60)
        pos_hint: { 'center_x': .5, 'center_y': .6}
    Button:
        text: root.parent.start_button_text
        font_name: "Fonts/Eurostile.ttf"
        font_size: dp(30)
        pos_hint: { 'center_x': .5, 'center_y': .3}
        size_hint: .2, .15
        background_normal: ''
        background_color: 1, .3, .4, .85
        on_press: root.parent.on_menu_button_pressed()
